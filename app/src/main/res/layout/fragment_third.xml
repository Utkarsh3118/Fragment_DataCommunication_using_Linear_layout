<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstFragment"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Job Information"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:id="@+id/tv_jobinfo"
        />

    <TextView
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Employee Name"
        android:textColor="#000000"
        android:textSize="18sp"
        android:padding="10dp"
        android:id="@+id/tv_employeename"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Employeename"
        android:background="@drawable/edit_text_editor"
        android:padding="20dp"
        android:layout_margin="5dp"
        android:id="@+id/et_employeename" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Company Name"
        android:textColor="#000000"
        android:textSize="18sp"
        android:padding="10dp"
        android:id="@+id/tv_companyname"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Company name"
        android:background="@drawable/edit_text_editor"
        android:padding="20dp"
        android:layout_margin="5dp"
        android:id="@+id/et_companyname" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Salary"
        android:textColor="#000000"
        android:textSize="18sp"
        android:padding="10dp"
        android:id="@+id/tv_salary"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Salary"
        android:background="@drawable/edit_text_editor"
        android:padding="20dp"
        android:inputType="number"
        android:layout_margin="5dp"
        android:id="@+id/et_salary" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Designation"
        android:textColor="#000000"
        android:textSize="18sp"
        android:padding="10dp"
        android:id="@+id/tv_designation"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Designation"
        android:background="@drawable/edit_text_editor"
        android:padding="20dp"
        android:layout_margin="5dp"
        android:id="@+id/et_designation" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="50dp"
        android:text="Next >"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:padding="20dp"
        android:background="@drawable/button_editor"
        android:id="@+id/b3"/>

</LinearLayout>